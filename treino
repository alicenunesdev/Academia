<body>

  <nav class="navbar">
    <h2>Academia</h2>
    <a href="index.html" data-tooltip="Cadastro">Cadastro</a>
    <a href="visualizar.html" data-tooltip="Visualizar">Visualizar</a>
    <a href="Treino.html" class="active" data-tooltip="Iniciar Treino">Treino</a>
  </nav>

  <main class="main-content">
    <h1>Iniciar Treino</h1>

    <div class="card">
      <label for="treinoSelect">Selecione um treino:</label>
      <select id="treinoSelect">
        <option value="">Carregando...</option>
      </select>
      <button id="iniciarBtn">Iniciar Treino</button>
    </div>

    <div id="treinoContainer"></div>
    <div style="text-align:center;">
      <button id="salvarBtn" style="max-width: 300px;">Salvar Treino Realizado</button>
    </div>
  </main>

  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.0/firebase-app.js";
    import { getFirestore, collection, getDoc, getDocs, doc, addDoc } from "https://www.gstatic.com/firebasejs/10.12.0/firebase-firestore.js";

    const firebaseConfig = {
      apiKey: "AIzaSyAQZrwPVmbcNZTEcGdqqE-Hscn2TS-hnwY",
      authDomain: "academia-bd-9d4da.firebaseapp.com",
      projectId: "academia-bd-9d4da",
      storageBucket: "academia-bd-9d4da.appspot.com",
      messagingSenderId: "201289997890",
      appId: "1:201289997890:web:19bece6aa0b3d52e3417db",
    };

    const app = initializeApp(firebaseConfig);
    const db = getFirestore(app);

    const treinoSelect = document.getElementById("treinoSelect");
    const iniciarBtn = document.getElementById("iniciarBtn");
    const treinoContainer = document.getElementById("treinoContainer");
    const salvarBtn = document.getElementById("salvarBtn");

    const cronometros = {};

    async function carregarTreinos() {
      const snapshot = await getDocs(collection(db, "treinos"));
      treinoSelect.innerHTML = '<option value="">Selecione</option>';

      snapshot.forEach(docSnap => {
        const data = docSnap.data();
        const option = document.createElement("option");
        option.value = docSnap.id;
        option.textContent = `${data.usuario} - ${data.tipoTreino}`;
        treinoSelect.appendChild(option);
      });
    }

    carregarTreinos();

    iniciarBtn.addEventListener("click", async () => {
      const treinoId = treinoSelect.value;
      if (!treinoId) {
        alert("Selecione um treino");
        return;
      }

      const docSnap = await getDoc(doc(db, "treinos", treinoId));
      if (!docSnap.exists()) {
        alert("Treino não encontrado");
        return;
      }

      const data = docSnap.data();
      treinoContainer.innerHTML = "";
      cronometros = {};

      data.grupos.forEach((grupo, idx) => {
        const div = document.createElement("div");
        div.className = "exercise-box";

        const cronometroId = `cron-${idx}`;
        cronometros[cronometroId] = { tempo: 0, intervalo: null };

        div.innerHTML = `
          <h3>${grupo.grupo}</h3>
          <div>Séries: ${grupo.serie} - Repetições alvo: ${grupo.repeticao}</div>
          <div class="series">
            ${Array.from({ length: grupo.serie }).map((_, i) => `
              <div>
                <div>Série ${i + 1}</div>
                <input placeholder="Reps">
                <input placeholder="Carga (kg)">
              </div>
            `).join('')}
          </div>
          <div class="cronometro">
            <span id="${cronometroId}">00:00</span>
            <button onclick="iniciarCronometro('${cronometroId}')">Iniciar</button>
            <button onclick="pausarCronometro('${cronometroId}')">Pausar</button>
            <button onclick="zerarCronometro('${cronometroId}')">Zerar</button>
          </div>
        `;

        treinoContainer.appendChild(div);
      });
    });

    window.iniciarCronometro = (id) => {
      if (cronometros[id].intervalo) return;

      cronometros[id].intervalo = setInterval(() => {
        cronometros[id].tempo++;
        const minutos = String(Math.floor(cronometros[id].tempo / 60)).padStart(2, '0');
        const segundos = String(cronometros[id].tempo % 60).padStart(2, '0');
        document.getElementById(id).textContent = `${minutos}:${segundos}`;
      }, 1000);
    };

    window.pausarCronometro = (id) => {
      clearInterval(cronometros[id].intervalo);
      cronometros[id].intervalo = null;
    };

    window.zerarCronometro = (id) => {
      clearInterval(cronometros[id].intervalo);
      cronometros[id].intervalo = null;
      cronometros[id].tempo = 0;
      document.getElementById(id).textContent = '00:00';
    };

    salvarBtn.addEventListener("click", async () => {
      const treinoId = treinoSelect.value;
      if (!treinoId) {
        alert("Selecione um treino");
        return;
      }

      const docSnap = await getDoc(doc(db, "treinos", treinoId));
      if (!docSnap.exists()) {
        alert("Treino não encontrado");
        return;
      }

      const data = docSnap.data();

      const resultado = {
        usuario: data.usuario,
        tipoTreino: data.tipoTreino,
        data: new Date().toISOString(),
        grupos: [],
      };

      const exercicios = treinoContainer.querySelectorAll(".exercise-box");

      exercicios.forEach((box, idx) => {
        const inputs = box.querySelectorAll("input");
        const series = [];

        for (let i = 0; i < inputs.length; i += 2) {
          const reps = inputs[i].value;
          const carga = inputs[i + 1].value;
          series.push({ reps, carga });
        }

        const cronId = `cron-${idx}`;
        const tempo = cronometros[cronId] ? cronometros[cronId].tempo : 0;

        resultado.grupos.push({
          grupo: data.grupos[idx].grupo,
          series: series,
          tempoSegundos: tempo,
        });
      });

      try {
        await addDoc(collection(db, "treinosRealizados"), resultado);
        alert("Treino realizado salvo com sucesso!");
      } catch (error) {
        alert("Erro ao salvar treino: " + error.message);
      }
    });

  </script>
</body>
</html>
